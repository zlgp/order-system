.my {
    background-color: #F3F3F5;
    height: 100vh;
}

.my-msg {
    background: #FFFFFF;
    box-shadow: 0px 1px 1px 0px rgba(21, 22, 61, 0.05);
    display: flex;
    padding: 28rpx 28rpx 28rpx 28rpx;
    align-items: center;
}

.msg-right {
    margin-left: 26rpx;
}

.msg-right-name {
    font-size: 33rpx;
    font-family: Alibaba;
    font-weight: normal;
    color: #15163D;
    margin-bottom: 17rpx;
}

.msg-right-dec {
    font-size: 25rpx;
    font-family: Alibaba;
    font-weight: normal;
    color: #A1A2B1;
}

.msg-btn {
    flex: 1;
    display: flex;
    justify-content: flex-end;
}

.my-list,
.order-list {
    display: flex;
    /* justify-content: space-around; */
    background-color: #FFFFFF;
    align-items: center;
    padding: 31rpx 0 28rpx 0;
    border-top: 1rpx solid #F3F3F5;
    border-bottom: 1rpx solid #F3F3F5;
    flex-wrap: wrap;
}

.list-item {
    text-align: center;
    width: 33.33%;
}

.item-img {
    width: 104rpx;
    height: 74rpx;
    margin-bottom: 20rpx;
}

.item-name {
    font-size: 35rpx;
    font-family: Alibaba;
    font-weight: normal;
    color: #15163D;
    margin-bottom: 20rpx;
}

.item-num {
    font-size: 25rpx;
    font-family: Alibaba;
    font-weight: normal;
    color: #A1A2B1;
}

.my-order {
    background-color: #FFFFFF;
    margin-top: 13rpx;
    border-radius: 15rpx;
}

.my-order-title {
    height: 90rpx;
    border-bottom: 1rpx solid #F3F3F5;
    padding-left: 27rpx;
    display: flex;
    align-items: center;
}